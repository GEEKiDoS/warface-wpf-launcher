        <Rectangle Fill="White" HorizontalAlignment="Left" Height="43" Margin="10,167,0,0" VerticalAlignment="Top" Width="324"/>
        <TextBlock x:Name="textBlock_Copy3" HorizontalAlignment="Left" Margin="24,179,0,0" TextWrapping="Wrap" Text="Startinfo" VerticalAlignment="Top" FontSize="16"/>
        <CheckBox x:Name="checkBox" Content="Use Protect" HorizontalAlignment="Left" Margin="229,182,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox1" Content="Use TLS" HorizontalAlignment="Left" Margin="139,182,0,0" VerticalAlignment="Top" IsChecked="True"/>

    </Grid>
</Window>
