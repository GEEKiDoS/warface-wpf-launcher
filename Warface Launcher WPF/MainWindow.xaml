                <DropShadowEffect ShadowDepth="1" Direction="270" Opacity="0.35"/>
            </Button.Effect>
        </Button>
        <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="287,218,0,0" TextWrapping="Wrap" Text="Server" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="23" Margin="290,242,0,0" TextWrapping="Wrap" Text="localhost" VerticalAlignment="Top" Width="308" Background="#FF282C2B" BorderBrush="#FF9B9B9B" Foreground="White"/>
